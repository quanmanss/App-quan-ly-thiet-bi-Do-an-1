<Window x:Class="DevicesControlApp.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevicesControlApp.Views"
        mc:Ignorable="d"
        Title="Đăng ký" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="40">

            <TextBlock Text="Đăng ký tài khoản"
            FontSize="22" 
            FontWeight="Bold"
            Margin="0 0 0 20"/>


            <TextBlock Text="Tên đăng nhập"/>
            <TextBox x:Name="UsernameBox"
          Width="250"
          Margin="0 5 0 20"/>


            <TextBlock Text="Mật khẩu"/>
            <PasswordBox x:Name="PasswordBox"
              Width="250"
              Margin="0 5 0 20"/>


            <TextBlock Text="Nhập lại mật khẩu"/>
            <PasswordBox x:Name="ConfirmPasswordBox"
              Width="250"
              Margin="0 5 0 20"/>

            <TextBlock Text="Nhập email"/>
            <TextBox x:Name="EmailBox"
      Width="250"
      Margin="0 5 0 20"/>

            <Button Content="Tạo tài khoản"
         Padding="10"
         Width="150"
         HorizontalAlignment="Left"
         Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Window>
