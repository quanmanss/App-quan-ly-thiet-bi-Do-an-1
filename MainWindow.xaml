<Window x:Class="DevicesControlApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevicesControlApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Thanh nút chức năng -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Thêm thiết bị" Width="120" Margin="0,0,10,0" Click="AddDevice_Click"/>
            <Button Content="Xóa thiết bị" Width="120" Margin="0,0,10,0" Click="RemoveDevice_Click"/>
        </StackPanel>

        <!-- Danh sách thiết bị -->
        <ListView x:Name="DevicesList" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tên thiết bị" Width="200" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Trạng thái" Width="100" DisplayMemberBinding="{Binding Status}"/>
                    <GridViewColumn Header="Hành động" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{Binding ButtonLabel}" 
                                        Width="100" 
                                        Click="ToggleButton_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Đặt lịch" Width="100"  Margin="340,0,340,5" Click="BtnSchedule_Click" Height="50" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
