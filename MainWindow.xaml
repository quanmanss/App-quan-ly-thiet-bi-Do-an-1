<Window x:Class="DevicesControlApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevicesControlApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <!-- Toggle Button Style -->
        <Style x:Key="ToggleDeviceButton" TargetType="Button">
            <Setter Property="Background" Value="#FFBDBDBD"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#FF757575"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Detail Button -->
        <Style x:Key="DetailButton" TargetType="Button" BasedOn="{StaticResource ToggleDeviceButton}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#FF212121"/>
        </Style>

        <!-- Generic Colored Button -->
        <Style x:Key="ColorfulButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#FF1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Remove Button -->
        <Style x:Key="RemoveButton" TargetType="Button" BasedOn="{StaticResource ColorfulButton}">
            <Setter Property="Background" Value="#FFF44336"/>
            <Setter Property="BorderBrush" Value="#FFD32F2F"/>
        </Style>

        <!-- Schedule Button -->
        <Style x:Key="ScheduleButton" TargetType="Button" BasedOn="{StaticResource ColorfulButton}">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="BorderBrush" Value="#FF388E3C"/>
        </Style>

    </Window.Resources>

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Thanh nút chức năng -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Thêm thiết bị" Width="120" Margin="0,0,10,0"
                    Click="AddDevice_Click" Style="{StaticResource ColorfulButton}"/>

            <Button Content="Xóa thiết bị" Width="120" Margin="0,0,10,0"
                    Click="RemoveDevice_Click" Style="{StaticResource RemoveButton}"/>

            <Button Content="Thêm phòng" Width="120" Margin="0,0,10,0"
                    Click="AddRoom_Click" Style="{StaticResource ColorfulButton}"/>
        </StackPanel>

        <!-- Layout chính: trái = phòng, phải = thiết bị -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <!-- Panel phòng -->
                <ColumnDefinition Width="*"/>
                <!-- Panel thiết bị -->
            </Grid.ColumnDefinitions>

            <!-- Danh sách phòng -->
            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="5" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Danh sách phòng" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ListView x:Name="RoomsList"  Height="600" d:ItemsSource="{d:SampleData ItemCount=5}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Phòng" Width="200" DisplayMemberBinding="{Binding Name}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>

            <ListView x:Name="DevicesList"
         Grid.Column="1"
          Margin="10"
          BorderThickness="0">

                <!-- GROUP SOURCE -->
                <ListView.Resources>
                    <CollectionViewSource x:Key="GroupedDevices"
                              Source="{Binding Devices}">
                        <CollectionViewSource.GroupDescriptions>
                            <PropertyGroupDescription PropertyName="RoomName"/>
                        </CollectionViewSource.GroupDescriptions>
                    </CollectionViewSource>
                </ListView.Resources>

                <ListView.ItemsSource>
                    <Binding Source="{StaticResource GroupedDevices}"/>
                </ListView.ItemsSource>

                <!-- HEADER PHÒNG -->
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border Background="#F2F2F2"
                            Padding="8"
                            Margin="0,10,0,5"
                            CornerRadius="4">
                                    <TextBlock Text="{Binding Name}"
                                   FontSize="18"
                                   FontWeight="Bold"/>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="8"
                Margin="10,4,0,4"
                CornerRadius="6"
                BorderBrush="#DDD"
                BorderThickness="1">

                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <!-- TÊN THIẾT BỊ -->
                                    <ColumnDefinition Width="*" />

                                    <!-- BẬT / TẮT -->
                                    <ColumnDefinition Width="80" />

                                    <!-- CHI TIẾT -->
                                    <ColumnDefinition Width="90" />
                                </Grid.ColumnDefinitions>

                                <!-- TÊN THIẾT BỊ -->
                                <TextBlock Grid.Column="0"
                           Text="{Binding Name}"
                           FontSize="14"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,0,10,0"/>

                                <!-- NÚT BẬT / TẮT -->
                                <Button Grid.Column="1"
                        Content="{Binding ButtonLabel}"
                        Height="30"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Click="ToggleButton_Click"/>

                                <!-- NÚT CHI TIẾT -->
                                <Button Grid.Column="2"
                        Content="Chi tiết"
                        Height="30"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Click="DetailButton_Click"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>


            </ListView>


        </Grid>

        <!-- Đặt lịch -->
        <Button Content="Đặt lịch" Width="100" Margin="340,0,340,5"
                Click="BtnSchedule_Click" Height="50"
                VerticalAlignment="Bottom"
                Style="{StaticResource ScheduleButton}"/>
    </Grid>
</Window>
